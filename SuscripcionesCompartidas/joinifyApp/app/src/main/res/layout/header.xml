<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="#1A1A2E"
    android:paddingHorizontal="16dp">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/logo"
        android:contentDescription="Logo Joinify"
        android:layout_marginEnd="12dp" />

    <!-- Nombre del usuario -->
    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginEnd="16dp"
        android:visibility="gone" />

    <!-- Icono de Logout -->
    <ImageView
        android:id="@+id/iconLogout"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/salir"
        android:contentDescription="Salir"
        android:layout_marginEnd="16dp"
        android:visibility="gone" />

    <!-- Espaciador -->
    <View
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <!-- Icono Mis Grupos -->
    <ImageView
        android:id="@+id/iconMisGrupos2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/groups"
        android:contentDescription="Mis Grupos"
        android:layout_marginEnd="16dp"
        android:visibility="gone" />


    <!-- Icono Crear Grupo -->
    <ImageView
        android:id="@+id/iconCreateGroup"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/creargrupo"
        android:contentDescription="Crear Grupo"
        android:layout_marginEnd="16dp"
        android:visibility="gone" />

    <!-- Icono Mis Grupos -->
    <ImageView
        android:id="@+id/iconMisGrupos"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/groups"
        android:contentDescription="Mis Grupos"
        android:layout_marginEnd="16dp"
        android:visibility="gone" />






    <!-- BotÃ³n Registro -->
    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrarse"
        android:backgroundTint="#FF8C00"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp" />
</LinearLayout>
